{
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.test.ts", "src/**/*.test.tsx"]
}